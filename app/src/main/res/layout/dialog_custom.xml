<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_root_layout"
    android:layout_width="300dp"
    android:layout_height="fill_parent"
    android:background="@color/prueba3"
    android:orientation="vertical">

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Nueva Tarea:"
        android:textColor="@color/prueba"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/custom_edit_reminder"
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_margin="3dp"
        android:background="@color/prueba2"
        android:gravity="start"
        android:textColor="@color/blanco">
        <requestFocus />
    </EditText>

    <CheckBox
        android:id="@+id/custom_check_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:buttonTint="@color/blanco"
        android:background="@color/prueba3"
        android:paddingLeft="10dp"
        android:text="Importante"
        android:textColor="@color/prueba" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="3sp"
        android:layout_marginRight="3sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/custom_button_cancel"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:text="Cancelar"
            android:layout_marginRight="3sp"
            android:layout_marginBottom="3sp"
            android:textColor="@color/negro"
            android:background="@color/azul_guapo"
            />

        <Button
            android:id="@+id/custom_button_commit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="50"
            android:layout_marginBottom="3sp"
            android:background="@color/azul_guapo"
            android:text="Aceptar"
            android:textColor="@color/negro" />

    </LinearLayout>

</LinearLayout>